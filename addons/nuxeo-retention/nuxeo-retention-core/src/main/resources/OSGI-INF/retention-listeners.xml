<component name="org.nuxeo.retention.listeners">

  <require>org.nuxeo.retention.vocabularies</require>

  <extension target="org.nuxeo.ecm.core.event.EventServiceComponent"
    point="listener">
    <listener name="retentionEventsBasedStartingPointListener"
      class="org.nuxeo.retention.listeners.RetentionStartingPointListener">
    </listener>
    <listener name="retentionExpiredListener"
      class="org.nuxeo.retention.listeners.RetentionExpiredListener">
      <event>retentionExpired</event>
    </listener>
  </extension>
</component>
