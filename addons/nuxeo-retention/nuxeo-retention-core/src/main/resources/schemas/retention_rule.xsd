<?xml version="1.0"?>

<xs:schema targetNamespace="http://www.nuxeo.org/ecm/schemas/common/"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:nxs="http://www.nuxeo.org/ecm/schemas/common/">

  <xs:include schemaLocation="base.xsd" />

  <xs:element name="applicationPolicy">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:enumeration value="auto" />
        <xs:enumeration value="manual" />
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
  
  <xs:element name="startingPointPolicy">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:enumeration value="immediate" />
        <xs:enumeration value="event_based" />
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
  
  <xs:element name="enabled" type="xs:boolean" default="true"/>

</xs:schema>